<Window x:Class="Administration.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Administration"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="800" Width="800">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="123*"/>
            <ColumnDefinition Width="106*"/>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="308*"/>
            <ColumnDefinition Width="123*"/>
            <ColumnDefinition Width="123*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>

        <Grid
            Background="#000066"
            Grid.ColumnSpan="6"
            Grid.Row="0">

            <TextBlock
               Foreground="White"
               HorizontalAlignment="Center" 
               VerticalAlignment="Center"
               Margin="0,12,0,12" 
               FontSize="40"
               FontWeight="DemiBold"
               Text="Beoordeel review">
            </TextBlock>

            <Button
                x:Name="logoutButton"
                Content="Uitloggen" 
                Click="LogoutButton_Click"
                Width="80"
                Height="30" 
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0,0,20,0"
                Background="WhiteSmoke"
                Cursor="Hand"/>
        </Grid>

        <TextBlock
               x:Name="error" 
               FontSize="20" 
               Grid.Column="3" 
               Grid.Row="2" 
               VerticalAlignment="Center" 
               HorizontalAlignment="Center"
               Opacity="0"
               Text="Er zijn geen nieuwe berichten.">
        </TextBlock>

        <StackPanel
            x:Name="feedbackContent" 
            Grid.RowSpan="5" 
            Grid.ColumnSpan="6"
            Opacity="0"
            Margin="123,72,123,72"
            VerticalAlignment="Center">
            <TextBlock
                x:Name="nameTitle"
                Margin="0,5"
                HorizontalAlignment="Center"
                Text="Naam"
                FontSize="16">
            </TextBlock>
            <Border
                Margin="0,5"
                BorderThickness="1" 
                BorderBrush="Black"
                Width="200px">
                <TextBlock 
                   x:Name="name" 
                   FontSize="12" 
                   TextWrapping="Wrap" 
                   Padding="2">
                </TextBlock>
            </Border>
            <TextBlock 
                x:Name="shortStoryTitle" 
                Margin="0,5" HorizontalAlignment="Center"
                Text="Kort verhaal"
                FontSize="16">
            </TextBlock>
            <Border Margin="0,5" BorderThickness="1" BorderBrush="Black" Width="400px" Height="75px">
                <TextBlock
                   x:Name="shortStory" 
                   FontSize="12" 
                   TextWrapping="Wrap" 
                   Padding="2">
                </TextBlock>
            </Border>
            <TextBlock
                x:Name="FeedbackTitle"
                Margin="0,5"
                HorizontalAlignment="Center"
                Text="Feedback (privé)"
                FontSize="16">
            </TextBlock>
            <Border Margin="0,5" BorderThickness="1" BorderBrush="Black" Width="400px" Height="125px">
                <TextBlock x:Name="feedback" 
                   FontSize="12" 
                    TextWrapping="Wrap" 
                   Padding="2">
                </TextBlock>
            </Border>
            <Grid Margin="0,10,0,0" MaxWidth="500">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button
        Name="AcceptButton"
        Grid.Column="0"
        BorderThickness="0"
        Background="#000066"
        Foreground="White" 
        FontSize="15"
        FontWeight="DemiBold"
        Height="25"
        Width="150"
        HorizontalAlignment="Center"
        Cursor="Hand"
        Click="Accept_Feedback"
        Content="Accepteer">
                </Button>

                <Button
        Name="RejectButton"
        Grid.Column="1"
        BorderThickness="0"
        Background="#000066"
        Foreground="White" 
        FontSize="15"
        FontWeight="DemiBold"
        Height="25" 
        Width="150" 
        HorizontalAlignment="Center"
        Click="Deny_Feedback"
        Content="Weiger">
                </Button>
            </Grid>
        </StackPanel>

        <Grid Background="#000066" Grid.ColumnSpan="6" Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
               Foreground="White" 
               FontSize="40" 
               FontWeight="DemiBold"
               VerticalAlignment="Center"
               HorizontalAlignment="Left"
               Margin="10,0,0,0"
               Text="{Binding StationName}"/>

            <TextBlock Grid.Column="2" 
           Foreground="White" 
           FontSize="40" 
           FontWeight="DemiBold"
           VerticalAlignment="Center"
           HorizontalAlignment="Right"
           Margin="0,0,10,0"
           Text="{Binding CurrentUser.Username}"/>
        </Grid>
    </Grid>
</Window>
