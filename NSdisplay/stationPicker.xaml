<Window x:Class="NSdisplay.stationPicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NSdisplay"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <TextBlock FontSize="25" x:Name="text">hi</TextBlock>
        <ComboBox x:Name="selectedStation" IsTextSearchEnabled="True" IsEditable="True" PreviewTextInput="selectedStation_PreviewTextInput" Height="50" Width="250" ItemsSource="{Binding Path=stations}"  DisplayMemberPath="name" SelectedValuePath="id" SelectedValue="{Binding Path=station}"></ComboBox>
        <Button Height="25" Width="200" Margin="0,150,0,0" Click="Button_Click">send</Button>
    </Grid>
</Window>
